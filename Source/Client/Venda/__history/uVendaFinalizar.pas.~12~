{$R *.dfm}

procedure TVendaFinalizar.acCancelarExecute(Sender: TObject);
begin
  inherited;
  //
end;

procedure TVendaFinalizar.acConcluirExecute(Sender: TObject);
begin
  inherited;
  //
end;

procedure TVendaFinalizar.DBEdit1Exit(Sender: TObject);
begin
  inherited;
  dsBase.DataSet.Edit;
  dsBase.DataSet.FieldByName('VR_TOTAL').AsFloat := dsBase.DataSet.FieldByName('QTDE').AsFloat * dsBase.DataSet.FieldByName('VR_VENDA').AsFloat;
  dsBase.DataSet.FieldByName('BC_IMPOSTO').AsFloat := dsBase.DataSet.FieldByName('VR_TOTAL').AsFloat;
  dsBase.DataSet.FieldByName('VR_IMPOSTO').AsFloat := dsBase.DataSet.FieldByName('BC_IMPOSTO').AsFloat * (dsBase.DataSet.FieldByName('PER_IMPOSTO').AsFloat / 100);
  dsBase.DataSet.Post;
end;

